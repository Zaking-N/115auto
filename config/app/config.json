{
    "115_api": {
        "base_url": "https://webapi.115.com",
        "endpoints": {
            "files": "/files",
            "add_folder": "/files/add",
            "move_files": "/files/move",
            "delete_files": "/files/delete"
        },
        "timeout": 30
    },
    "app": {
        "port": 5000,
        "debug": false,
        "secret_key": "change-this-to-a-random-secret",
        "metadata": {
            "movie": {
                "categories": ["动作", "喜剧", "科幻", "爱情", "恐怖", "悬疑", "动画", "纪录片"],
                "default_folder": "/movies"
            },
            "tv": {
                "categories": ["国产剧", "美剧", "韩剧", "日剧", "英剧", "港剧", "台剧"],
                "default_folder": "/tv_shows"
            }
        },
        "logging": {
            "level": "INFO",
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "max_size": "10MB",
            "backup_count": 5,
            "path": "/data/logs/app.log"
        }
    }
}